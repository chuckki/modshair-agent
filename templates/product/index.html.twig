{% extends 'product/productBase.html.twig' %}


{% block productBody %}
    <div class="row">
        <div class="col-3">
            <h1>
                {% if currentCategory %}
                    {{ currentCategory.name }}
                {% else %}
                    Produkte
                {% endif %}
            </h1>
        </div>
        <div class="col-9">
            <form>
                <div
                    class="input-group"
                    {{ stimulus_controller({
                        'autocomplete': {
                            url: path('app_homepage', { preview: 1 }),
                            skipHiddenProperty: true
                        },
                        'autocomplete-transition': {}
                    }) }}
                    data-action="toggle->autocomplete-transition#toggle"
                >
                    <input
                        name="q"
                        value="{{ searchTerm }}"
                        placeholder="Search products..."
                        type="search"
                        class="form-control"
                        data-autocomplete-target="input"
                    >

                    <div
                        class="search-preview"
                        data-autocomplete-target="results"
                        data-autocomplete-transition-target="results"
                    ></div>
                </div>
            </form>
        </div>
    </div>
    <div class="row mt-4">
        {% for product in products %}
            <div class="col-xs-12 col-12 mb-2 pb-2">
                <div class="component-light d-flex" style="justify-content: space-between;">
                    <div class="product-image d-flex"  style="justify-content: space-between;align-items: center;">
                        <a href="{{ path('app_product', { id: product.id }) }}">
                            <img
                                alt="{{ product.name }}"
                                {% if product.category.id == 1 %}
                                src="{{ asset('/uploads/products/milbon-logo.png') }}"
                                {% endif %}
                                {% if product.category.id == 2 %}
                                src="{{ asset('/uploads/products/tahe-logo.png') }}"
                                {% endif %}
                                    style="height: 50px !important;"
                                class="d-block mb-2"
                            >
                        </a>
                        <div class="d-flex justify-content-between px-2 pt-3 mb-2">
                            <h3 style="font-size: 1rem;">
                                <a href="{{ path('app_product', { id: product.id }) }}">
                                    {{ product.name }}
                                </a>
                            </h3>

                        </div>
                    </div>
                    <div class="px-2 my-3 flex justify-content-between">
                        <p class="p-0 d-inline">
                            <strong>{{ product.priceString|format_currency('USD') }}</strong>
                        </p>
                        <a href="{{ path('app_product', { id: product.id }) }}" class="btn btn-info">Details</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <h5 class="ml-4 mt-4" >
                    Whoopsie Daisy, keine Produkte verf√ºgbar!
                </h5>
            </div>
        {% endfor %}
    </div>

    <div class="row">
        {#
        <span class="p-3">
            Shipping takes 10-13 weeks, and products probably won't work
        </span>
         #}
    </div>
{% endblock %}
